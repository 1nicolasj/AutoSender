@model AutoSender.Models.Contato

@{
    ViewData["Title"] = "Excluir Contato";
}

<div class="container">
    <h1>Excluir Contato</h1>

    <div class="alert alert-danger">
        <h3>Tem certeza que deseja excluir este contato?</h3>
    </div>

    <div class="row">
        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Nome)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Telefone)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Telefone)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.MensagemPersonalizada)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.MensagemPersonalizada)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DataCadastro)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.DataCadastro)</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Excluir" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </form>
        </div>
    </div>
</div> 