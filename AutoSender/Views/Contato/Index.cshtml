@model IEnumerable<AutoSender.Models.ContatoModel>
@{
    ViewData["Title"] = "Contatos";
}
<h2>Contatos</h2>
<a class="btn btn-primary" href="@Url.Action("Create")">Novo Contato</a>
<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Telefone</th>
            <th>Mensagem</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Nome</td>
                <td>@c.NumeroTelefone</td>
                <td>@c.Mensagem</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = c.Id })">Editar</a> |
                    <a href="@Url.Action("Delete", new { id = c.Id })">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>